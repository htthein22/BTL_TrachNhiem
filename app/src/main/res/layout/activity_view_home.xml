<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewPager.ViewHome">

    <RelativeLayout
        android:id="@+id/rlt1"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#4CAF50">
        <ImageView
            android:id="@+id/back"
            android:onClick="previous"
            android:layout_margin="15dp"
            android:src="@drawable/back"
            android:layout_width="25dp"
            android:layout_height="25dp" />
        <ImageView
            android:id="@+id/dongho"
            android:layout_toRightOf="@id/back"
            android:src="@drawable/dongho"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/tvtime"
            android:text="45:00"
            android:textSize="15dp"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_toRightOf="@id/dongho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:id="@+id/ke"
            android:background="#fff"
            android:layout_marginLeft="90dp"
            android:layout_toRightOf="@id/tvtime"
            android:layout_width="1dp"
            android:layout_height="match_parent"></RelativeLayout>
        <TextView
            android:id="@+id/kiemtra"
            android:text=" Kiá»ƒm Tra "
            android:textStyle="bold"
            android:layout_margin="16dp"
            android:layout_toRightOf="@id/ke"
            android:textSize="15dp"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:layout_below="@id/rlt1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>